<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="view_app_file_wizard" model="ir.ui.view">
            <field name="name">App Wizard</field>
            <field name="model">app.file.wizard</field>
            <field name="arch" type="xml">
                <form string="Download File">
                    <field name="file_name" invisible="1"/>

                    <div>
                        <h2>Export Complete</h2>
                        <p>Here is the exported report file: <field name="file" readonly="1" filename="file_name"/></p>
                    </div>

                    <footer>
                        <button special="cancel" string="Close" type="object" class="btn-primary"/>
                    </footer>
                </form>
            </field>
        </record>

    </data>
</odoo>