<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <!-- Fiscal Year -->
        <record id="view_app_date_default_form" model="ir.ui.view">
            <field name="name">app.date.default.form</field>
            <field name="model">app.date.default</field>
            <field name="arch" type="xml">
                <form string="Fiscal year">
                    <group>
                        <group>
                            <field name="date_start" on_change="onchange_date(date_start, days)"/>
                            <field name="days" on_change="onchange_date(date_start, days)"/>
                            <field name="date_end" force_save = "1"/>
                        </group>
                        <group>
                            
                        </group>
                    </group>
                </form>
            </field>
        </record>
        
        <record id="view_app_date_default_tree" model="ir.ui.view">
            <field name="name">app.date.default.tree</field>
            <field name="model">app.date.default</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="date_start"/>
                    <field name="days"/>
                    <field name="date_end"/>
                </tree>
            </field>
        </record>
        
        <record id="action_app_date_default" model="ir.actions.act_window">
            <field name="name">Default Date</field>
            <field name="res_model">app.date.default</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
              <p class="oe_view_nocontent_create">
                Click to start a new dates.
              </p>
            </field>
        </record>
        
        <!-- Top menu item -->
        <menuitem name="Dates"
            id="menu_date"
            sequence="20"/>
        
        <menuitem id="menu_date_action" name="Dates" parent="menu_date" sequence="2" />
        <menuitem id="menu_date_action2" name="Dates" parent="menu_date_action" sequence="2" action="action_app_date_default"/>

    </data>
</openerp>
