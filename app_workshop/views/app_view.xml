<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        
        <record id="view_app_form" model="ir.ui.view">
            <field name="name">app.app.form</field>
            <field name="model">app.app</field>
            <field name="arch" type="xml">
                <form string="App">
                    <header>
                        <button name="action_report"  string="Report" type="object" class="oe_highlight"/>
                    </header>
                   <sheet>
                       <group>
                           <group>
                               <field name="name"/>
                           </group>
                           <group>
                                <field name="create_date"/>
                           </group>
                       </group>
                       <notebook colspan="4">
                            <page string="App Lines">
                                <field name="line_ids" colspan="4" nolabel="1">
                                    <tree string="Lines" editable="bottom">
                                        <field name="partner_id"/>
                                        <field name="amount"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="app_app_action" model="ir.actions.act_window">
            <field name="name">Apps</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">app.app</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{}</field>
            <field name="help" type="html">
              <p class="o_view_nocontent_smiling_face">
                Create a new customer in your address book
              </p><p>
                Odoo helps you easily track all activities related to a customer.
              </p>
            </field>
        </record>

        <!-- Top menu item -->
        <menuitem name="App App"
            id="menu_app"
            web_icon="app_workshop,static/description/icon.png"
            sequence="10"/>

        <menuitem id="menu_app_receivables" name="Apps" parent="menu_app" sequence="2"/>

        <menuitem id="menu_app_action" name="Customers"
            parent="menu_app_receivables"
            action="app_app_action" sequence="2"/>
        
    </data>
</odoo>