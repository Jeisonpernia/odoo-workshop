<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="view_app_file_wizard" model="ir.ui.view">
            <field name="name">App Wizard</field>
            <field name="model">app.file.wizard</field>
            <field name="arch" type="xml">
                <form string="Download File">
                    <div class="alert alert-info text-center" role="alert" style="margin-bottom:0px;">
                        Se generado el Reporte correctamente, proceda a descargarlo.
                    </div>
                    <group>
                        <field name="file" readonly="1" filename="file_name"/>
                        <field name="file_name" invisible="1"/>
                    </group>
                    <footer>
                        <button string="Close" class="oe_link" special="cancel" />
                    </footer>
                </form>
            </field>
        </record>

    </data>
</odoo>